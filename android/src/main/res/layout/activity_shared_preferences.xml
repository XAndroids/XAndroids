<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sdk.storage.sharedpreferences.SharedPreferencesActivity">

    <EditText
        android:id="@+id/sharedpreferences_edittext_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sharedpreferences_button_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="commit" />

        <Button
            android:id="@+id/sharedpreferences_button_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="apply" />
    </LinearLayout>

    <TextView
        android:id="@+id/sharedpreferences_textview_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/sharedpreferences_button_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="read" />
</LinearLayout>