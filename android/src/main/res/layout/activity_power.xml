<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".optimize.power.PowerActivity">

    <Button
        android:id="@+id/power_button_whitelist1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加白名单1" />

    <Button
        android:id="@+id/power_button_whitelist2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加白名单2" />

    <Button
        android:id="@+id/power_button_batterycheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取当前充电状态" />

    <Button
        android:id="@+id/power_button_batterysttus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="监控充电状态变化" />
</LinearLayout>