<resources>

    <!-- Base application theme. -->
    <!--Theme.AppCompat.DayNight.DarkActionBar，DayNight深色模式主题-->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--定义启动Activity的启动主题，用于优化启动白屏问题，在Activity启动后替换-->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/dialog_background_progress</item>
    </style>


    <style name="Dialog.FullScreen" parent="Theme.AppCompat.Dialog">
        <!--全透明相关样式-->
        <!--Window的颜色透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--透明背景不允许变暗-->
        <item name="android:backgroundDimEnabled">false</item>

        <!--全屏幕-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="NavigationTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="login2_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawableEnd">@drawable/jiantou_right</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Dialog.Background" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@drawable/dialog_background_transparency</item>
    </style>
</resources>
